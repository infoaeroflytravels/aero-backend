{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prisma"]
}
